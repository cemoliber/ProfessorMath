<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Operations"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bannerAd3"
        android:text="HADİ BAŞLAYALIM"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:id="@+id/levelSpinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        />

    <ImageView
        android:id="@+id/addition"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/addition2"
        android:layout_marginTop="250dp"/>

    <ImageView
        android:id="@+id/multiply"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/multii"
        android:layout_marginTop="430dp"/>

    <ImageView
        android:id="@+id/subtraction"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sub"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="200dp"/>

    <ImageView
        android:id="@+id/divImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/division"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="200dp"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bannerAd3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        ads:adUnitId="@string/banner_ad_id_test"
        ads:adSize="BANNER"
        />

</RelativeLayout>