<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Operations"
    android:background="#2196F3">

    <Spinner
        android:id="@+id/levelSpinner"
        android:background="#061153"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:dropDownSelector="@color/white"
        android:textAlignment="center"

        />

    <ImageView
        android:id="@+id/addition"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/levelSpinner"
        android:src="@drawable/a"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/multiply"
        android:layout_below="@+id/addition"
        android:layout_marginTop="50dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/c"
        android:layout_marginLeft="50dp"
        />

    <ImageView
        android:id="@+id/subtraction"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/levelSpinner"
        android:src="@drawable/b"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"/>

    <ImageView
        android:id="@+id/divImg"
        android:layout_below="@+id/addition"
        android:layout_marginTop="50dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/d"
        android:layout_marginLeft="200dp"/>

    <ImageView
        android:id="@+id/reportCardImage"
        android:layout_below="@+id/multiply"
        android:layout_marginTop="50dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/karne"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/chartImage"
        android:layout_below="@+id/multiply"
        android:layout_marginTop="50dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/chart"
        android:layout_marginLeft="200dp"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bannerAd3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        ads:adUnitId="@string/banner_ad_id_test"
        ads:adSize="BANNER"
        />

</RelativeLayout>